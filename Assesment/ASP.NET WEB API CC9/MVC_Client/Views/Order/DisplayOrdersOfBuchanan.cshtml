@model IEnumerable<MVC_Client.Models.MVCOrder>
@{
    ViewBag.Title = "Buchanan (EmployeeId = 5) Order";
}
<h2>@ViewBag.Title</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No orders found.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>OrderID</th>
                <th>OrderDate</th>
                <th>CustomerID</th>
                <th>ShipCountry</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.OrderID</td>
                    <td>@(o.OrderDate?.ToString("yyyy-MM-dd"))</td>
                    <td>@o.CustomerID</td>
                    <td>@o.ShipCountry</td>
                </tr>
            }
        </tbody>
    </table>
}


