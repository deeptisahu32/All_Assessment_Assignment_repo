@model IEnumerable<MVC_CODE_FIRST.Models.Movie>

@{
    ViewBag.Title = "Movies released in " + ViewBag.Year;
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(m => m.FirstOrDefault().MovieName)</th>
                <th>@Html.DisplayNameFor(m => m.FirstOrDefault().DirectorName)</th>
                <th>@Html.DisplayNameFor(m => m.FirstOrDefault().DateOfRelease)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(mi => item.MovieName)</td>
                    <td>@Html.DisplayFor(mi => item.DirectorName)</td>
                    <td>@item.DateOfRelease.ToString("dd-MMM-yyyy")</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Mid }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Mid }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Mid })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No movies found for year <strong>@ViewBag.Year</strong>.</p>
}

<!-- Quick search form to test another year -->
<form method="get" action="@Url.Action("ByYear", "Movies")" class="form-inline" style="margin-top:12px;">
    <label for="year">Search year:&nbsp;</label>
    <input type="number" id="year" name="year" class="form-control" placeholder="e.g., 2023" min="1900" max="2100" required />
    <button type="submit" class="btn btn-primary" style="margin-left:8px;">Go</button>
</form>
